[Unit]
Description=JukeboxService
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/sonos-spotify-jukebox/jukebox-web
ExecStart=/home/pi/sonos-spotify-jukebox/jukeboxenv/bin/python /home/pi/sonos-spotify-jukebox/jukebox-web/app.py
Restart=always

[Install]
WantedBy=multi-user.target